{
  "name": "@fluffylabs/jammin",
  "version": "0.0.1",
  "description": "JAM development tooling",
  "type": "module",
  "private": true,
  "workspace": [
    "bin/*"
  ],
  "publishConfig": {
    "tag": "next"
  },
  "scripts": {
    "qa": "biome ci",
    "qa-fix": "npm run format; npm run lint",
    "format": "biome format --write",
    "lint": "biome check --write && biome lint --write",
    "publish:cli": "cd bin/cli && bun publish --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "^1.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
