{
  "name": "@fluffylabs/jammin",
  "version": "0.0.2",
  "description": "JAM development tooling",
  "author": "Fluffy Labs",
  "license": "MPL-2.0",
  "type": "module",
  "main": "./bin/cli/dist/index.js",
  "bin": {
    "jammin": "./bin/cli/dist/index.js"
  },
  "files": [
    "bin/cli/dist",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "bin/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "cli": "bun run ./bin/cli/index.ts",
    "qa": "biome ci",
    "qa-fix": "npm run format; npm run lint",
    "format": "biome format --write",
    "lint": "biome check --write && biome lint --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "^1.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "eventemitter3": "5.0.1"
  }
}
